{
  "footer": {
    "blocks": [
      "footer-layout.desktop",
      "footer-layout.mobile"
    ]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [ 
      "flex-layout.col#footer-3-desktop",
      "flex-layout.col#footer-4-desktop",
      "flex-layout.col#footer-5-desktop",
      "flex-layout.col#footer-6-desktop"
    ],
    "props":{
      "blockClass": "inverted"
    }
  },
  "flex-layout.col#footer-3-desktop":{
    "children": [
      "logo#desktop"
    ]
  },

  "flex-layout.col#footer-4-desktop":{
    "children":[
      "rich-text#institutional-title",
      "vtex.menu@2.x:menu#institutional"
    ]
  },
  "rich-text#institutional-title":{
    "props":{
      "text": "#### Institutional"
    }
  },
  "flex-layout.col#footer-5-desktop":{
    "children": [
      "rich-text#payment-title",
      "accepted-payment-methods",
      "rich-text#security-title",
      "image#security",
      "rich-text#social-title",
      "social-networks"
    ]
  },
  "rich-text#payment-title":{
    "props":{
      "text": "#### Payment"
    }
  },
  "accepted-payment-methods": {
    "props": {
      "paymentMethods": ["MasterCard", "Visa", "Diners Club"]
    }
  },
  "rich-text#security-title":{
    "props":{
      "text": "#### Security"
    }
  },
  "image#security":{
    "props": {
      "src": "https://bookstoretheme.vteximg.com.br/arquivos/security.png",
      "maxHeight": "60px"
    }
  },
  "rich-text#social-title":{
    "props":{
      "text": "#### Social Networks"
    }
  },
  "social-networks": {
    "props": {
      "socialNetworks": [
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/vtexonline/"
        },
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/vtextruecloud/"
        },
        {
          "name": "Twitter",
          "url": "https://twitter.com/vtexonline"
        },
        {
          "name": "Youtube",
          "url": "https://www.youtube.com/user/VTEXTV"
        }
      ]
    }
  },
  "flex-layout.col#footer-6-desktop":{
    "children": [
      "rich-text#facebook"
    ]
  },
  "rich-text#facebook":{
    "props":{
      "text": "&nbsp;<iframe src='https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Fvtexcommerce%2F&tabs&width=340&height=214&small_header=false&adapt_container_width=true&hide_cover=false&show_facepile=true&appId=1126797967420050' width='340' height='214' style='border:none;overflow:hidden' scrolling='no' frameborder='0' allowTransparency='true' allow='encrypted-media'></iframe>"
    }
  },
  
  "flex-layout.row#footer-2-desktop": {
    "children": [
      "flex-layout.col#footer-7-desktop",
      "flex-layout.col#footer-8-desktop"
    ]
  },
  "flex-layout.col#footer-7-desktop":{
    "children": [
      "rich-text#footer-bottom"
    ],
    "props":{
      "blockClass":"tright"
    }
  },
  "flex-layout.col#footer-8-desktop":{
    "children": [
      "image#vtex"
    ],
    "props":{
      "blockClass":"tright"
    }
  },

  "rich-text#footer-bottom":{
    "props":{
      "text": "All right reserved. Pickup your product in our B&M Store - Address: 123 St., 123 - New York - NY. Phone: 55 555-5555. The BookStore is the complete theme recomended for bookstore and grosseries. COD. 1234567889"
    }
  },
  "image#vtex":{
    "props": {
      "src": "https://bookstoretheme.vteximg.com.br/arquivos/vtexio.png"
    }
  },

  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#1-footer-mobile"
    ]
  },
  "flex-layout.row#1-footer-mobile": {
    "children": [
      "flex-layout.col#footer-1-mobile"
    ]
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "rich-text#payment-title",
      "accepted-payment-methods",
      "rich-text#security-title",
      "image#security",
      "rich-text#social-title",
      "social-networks",
      "rich-text#footer-mobile"
    ]
  },
  "rich-text#footer-mobile": {
    "props": {
      "text": "All stock and product photos are from photos.icons8.com"
    }
  }
}
